---
import Alert from "../components/Aleart.astro";
import "../css/style.css";
const color = "blue";
const name = "Astro";
const nav = ["ホーム", "会社情報", "お問い合わせ"];
const x = true;
const json = [
  {
    href: "/",
    label: "ホーム",
  },
  {
    href: "/about/",
    label: "会社情報",
  },
];

  const allPosts = await Astro.glob('../blog/*.md');
  const tags = [...new Set(allPosts.map(post => post.frontmatter.tags).flat())]
---
<html>
  <meta charset="UTF-8" />
  <h1>Home</h1>
  <Alert />
  <ul>
    {
      tags.map((tag) => (
        <li>
          <a href={tag}>{tag}</a>
        </li>
      ))
    }
  </ul>
  <div class="box">
    <p>
      test
    </p>
  </div>
  <p>{x ? 'yes' : 'no' }</p>




</html>
  <style define:vars={{ color }}>
    h1 {
      color: var(--color);
    }
  </style>

<style lang="scss">
  .box {
    p {
      color: red;
    }
  }
</style>
